{
  "name": "vite-react-tailwind-lint",
  "private": true,
  "version": "1.4.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" && stylelint \"src/**/*.css\" && htmlhint \"**/*.html\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix && stylelint \"src/**/*.css\" --fix && htmlhint \"**/*.html\"",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,scss,html,md}'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "analyze": "vite build --mode analyze",
    "prepare": "husky"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.7",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "htmlhint": "^1.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "stylelint": "^16.19.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "tailwindcss": "^4.1.7",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "jsdom": "^25.0.1",
    "vite": "^6.3.5",
    "vite-plugin-eslint2": "^5.0.3",
    "vite-plugin-stylelint": "^6.0.0",
    "vitest": "^4.0.18"
  }
}
