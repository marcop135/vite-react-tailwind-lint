{
  "name": "vite-react-tailwind-lint",
  "private": true,
  "version": "1.4.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" && stylelint \"src/**/*.css\" && htmlhint \"**/*.html\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix && stylelint \"src/**/*.css\" --fix && htmlhint \"**/*.html\"",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,scss,html,md}'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "analyze": "vite build --mode analyze",
    "prepare": "husky"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^15.11.0",
    "htmlhint": "^1.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "stylelint": "^17.1.1",
    "stylelint-config-standard-scss": "^17.0.0",
    "tailwindcss": "^4.1.18",
    "@testing-library/react": "^16.3.2",
    "@testing-library/jest-dom": "^6.9.1",
    "jsdom": "^28.0.0",
    "vite": "^7.3.1",
    "vite-plugin-eslint2": "^5.0.5",
    "vite-plugin-stylelint": "^6.0.4",
    "vitest": "^4.0.18"
  }
}
